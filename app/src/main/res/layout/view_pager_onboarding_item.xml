<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_marginHorizontal="@dimen/size_20dp"
        style="@style/OnboardingTitleStyle"
        android:layout_width="0dp"
        android:textAlignment="viewStart"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/welcome_to_plantapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/view_pager_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/flower_image"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_welcome_flower"
        app:layout_constraintBottom_toBottomOf="@+id/tv_intro_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>