<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="164dp"
    app:cardCornerRadius="14dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="@color/background_paywall_card"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/view_pager_image"
            android:layout_width="240dp"
            android:layout_height="164dp"
            android:contentDescription="@string/flower_image"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_welcome_flower"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.9"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/view_pager_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/card_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="TextView"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
