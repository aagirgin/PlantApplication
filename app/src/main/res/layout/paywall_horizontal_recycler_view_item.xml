<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="155dp"
    app:cardCornerRadius="14dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="@color/background_paywall_card"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/view_pager_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/flower_image"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_welcome_flower"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Unlimited"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/view_pager_image"
            app:layout_constraintTop_toBottomOf="@+id/view_pager_image" />

        <TextView
            android:id="@+id/card_subtitle_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="16dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:text="Plant Identify"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/view_pager_image"
            app:layout_constraintTop_toBottomOf="@+id/card_title_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
